<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@android:style/Widget.Button</item>
    </style>

    <style name="Theme1" parent="AppTheme" >
        <item name="android:textColorPrimaryInverse">@android:color/background_light</item>
        <item name="android:textColor">#ffcc0000</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme2" parent="AppTheme" >
        <item name="android:textColorPrimaryInverse">@android:color/background_light</item>
        <item name="android:textColor">#ff669900</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Theme3" parent="AppTheme" >
        <item name="android:textColorPrimaryInverse">@android:color/background_light</item>
        <item name="android:textColor">#142fb9</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme4" parent="AppTheme" >
        <item name="android:textColorPrimaryInverse">@android:color/background_light</item>
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
